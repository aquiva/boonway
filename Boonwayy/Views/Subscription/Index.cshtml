@model Boonwayy.Models.Subscription.IndexViewModel

@{
    ViewBag.Title = "Subscription Plans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Subscrption Plans</h2>
    
    <div class="row">
        @foreach (var plan in Model.Plans)
    {


        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">

            <!-- PRICE ITEM -->
            <div class="panel price @plan.CSSThemeClasses">
                <div class="panel-heading  text-center">
                    <h3>@plan.Name</h3>
                </div>
                <div class="panel-body text-center">
                    <p class="lead" style="font-size:40px"><strong>$@plan.AmountInDollars / @plan.Interval</strong></p>
                </div>
                <ul class="list-group list-group-flush text-center">
                    @foreach (var feature in plan.Features)
                {
                    <li class="list-group-item"><i class="icon-ok text-danger"></i> @feature.Description</li>
            }





                </ul>
                <div class="panel-footer">
                    <a class="btn btn-lg btn-block @plan.CSSThemeButtonClasses" href="/Subscription/Billing/@plan.Id">JOIN NOW!</a>
                </div>
            </div><!-- /PRICE ITEM -->





        </div><!-- /COL CLOSE -->

}


        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">

            <!-- PRICE ITEM -->
            <div class="panel panel-default">
                <div class="panel-heading  text-center">
                    <h3>CelebWorld</h3>
                </div>
                <div class="panel-body text-center">
                    <p class="lead" style="font-size:40px"><strong>$0.00</strong></p>
                </div>
                <ul class="list-group list-group-flush text-center">
                    <li class="list-group-item">See submitted projects</li>
                    <li class="list-group-item">Post projects</li>
                    <li class="list-group-item">Make an offer</li>
                    <li class="list-group-item">Make a deal</li>  
                </ul>
                <div class="panel-footer">
                    <a class="btn btn-lg btn-block btn-default" href="@Url.Action("Contact", "Home")">Invest Now</a>
                </div>
            </div><!-- /PRICE ITEM -->





        </div><!-- /COL CLOSE -->

    </div><!-- /ROW CLOSE -->
</div>