<section id="page-header">
    <div class="row">
        <div class="col-md-12">
            <div class="section-text">
                <h1 class="section-heading">@ViewBag.Title</h1>
                <h3>Send your valuable feedback</h3>
            </div>
        </div>
    </div>
</section>

@if(ViewBag.Message != null)
{
    <h2 class="alert alert-info">@ViewBag.Message</h2>
}

<section id="page-content">
    <div class="container">
        <div class="row">
            
            <div class="col-md-6">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
    {
            @Html.AntiForgeryToken()

            <h4>Message Form</h4>
            <hr />
            <div class="form-group">
                <label for="txtFullName">Full Name</label>
                <input type="text" class="form-control" name="txtFullName" placeholder="John Doe" />
            </div>

            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="email" class="form-control" name="txtEmail" placeholder="johndoe@website.com" />
            </div>

            <div class="form-group">
                <label for="txtSubject">Subject</label>
                <input type="text" class="form-control" name="txtSubject" placeholder="Subject" />
            </div>

            <div class="form-group">
                <label for="txtMessage">Message</label>
                <textarea name="txtMessage" class="form-control" placeholder="Message" rows="10"></textarea>
            </div>

            <input type="submit" value="Send Message" class="btn btn-primary" />
}
            </div>

            <div class="col-md-6">
                <h4>Other Contact Details</h4>
                <hr />
                @*<p class="lead"><i class="fa fa-location-arrow"></i> One Microsoft Way, Redmond, WA 98052-6399</p>
                <p class="lead"><i class="fa fa-phone"></i> 425.555.0100</p>
                <p class="lead"><i class="fa fa-fax"></i> 425.555.0100</p>*@
                <p class="lead"><i class="fa fa-support"></i> <a href="mailto:Support@boonway.org">Support@boonway.org</a></p>

            </div>

        </div>
    </div>
</section>

