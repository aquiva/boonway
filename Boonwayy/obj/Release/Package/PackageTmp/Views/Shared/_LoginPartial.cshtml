@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("CelebWorld", "Index", "Home")</li>
            @*<li>@Html.ActionLink("CelebWorld", "Explore", "Home")</li>*@

            <li>@Html.ActionLink("Emergency Relief Funds", "ERFs", "Home")</li>
            <li>@Html.ActionLink("Subscription Plans", "Index", "Subscription")</li>
        </ul>

        <ul class="nav navbar-nav navbar-right">

            <li class="active">
                @*@Html.ActionLink("My Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@

            <li class="active dropdown">
                <a href="@Url.Action("Index", "Manage")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Account <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a class="" href="@Url.Action("UserProfile", "Manage")">My Profile</a></li>
