@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "navbar-form navbar-right login-form-nav", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "", @placeholder = "Email" })
        @Html.PasswordFor(m => m.Password, new { @class = "", @placeholder = "Password" })

    </div>
    <div class="form-group">

    </div>
    <button type="submit" class="">Login</button>
    <a href="@Url.Action("ForgotPassword", "Account")" style="color:#fff;">Forgot your password?</a>

    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger login-error" })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger login-error" })

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}