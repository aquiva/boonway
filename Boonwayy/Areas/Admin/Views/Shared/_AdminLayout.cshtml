                </div>
                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index", "Dashboard")">
                            <i class="pe-7s-graph"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "UserProposals")">
                            <i class="pe-7s-news-paper"></i>
                            <p>User Proposals</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Users")">
                            <i class="pe-7s-note2"></i>
                            <p>Registerd Users</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "ERF")">
                            <i class="pe-7s-news-paper"></i>
