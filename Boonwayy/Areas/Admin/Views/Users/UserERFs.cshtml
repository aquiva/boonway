@model IEnumerable<Boonwayy.Models.MERF>

@{
    ViewBag.Title = "User ERFs";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">ERF Posts by @Session["userName"]</h4>

                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>

                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.User.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.MERFStartDate)</th>

                            <th>View</th>
                            <th>Delete</th>
                            
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                                    <td>@item.MERFStartDate.ToLongDateString()</td>

                                    <td><a href="@Url.Action("ERF", "Home", new { area = "", id = item.Title })" class="btn btn-info" target="_blank">View Post</a></td>
                                    <td><a href="@Url.Action("DeleteERF", "Users", new { id = item.Id })" class="btn btn-danger">Delete</a></td>
                                    
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>
