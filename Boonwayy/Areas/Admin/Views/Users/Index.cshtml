@model IEnumerable<Boonwayy.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Registered Users</h4>
                        <p class="category">Manage users</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>

                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>Stripe Customer ID</th>
                            <th>Subscription Active Until</th>
                            <th>Email Confirmed</th>

                            <th>View Profile</th>
                            
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.StripeCustomerId)</td>
                                        <td>@item.ActiveUntil.ToLongDateString()</td>
                                        <td>@Html.DisplayFor(modelItem => item.EmailConfirmed)</td>
                                        <td><a href="@Url.Action("UserProfile", "Users", new { id = item.Id })" class="btn btn-success">Open Profile</a></td>
                                        
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>
